<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#968B7A" />
            <corners android:radius="12dp" />
            <stroke android:width="1dp" android:color="#7A6F5F" />
        </shape>
    </item>
    
    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <!-- Background color - light brown/taupe like in the image -->
            <solid android:color="#A89B8C" />
            
            <!-- Rounded corners -->
            <corners android:radius="12dp" />
            
            <!-- Subtle border -->
            <stroke 
                android:width="1dp" 
                android:color="#8B7D6B" />
        </shape>
    </item>
    
</selector>
